<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.compositeurmusical"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnregistrementActivity"
            android:label="@string/title_activity_editeur" >
        </activity>
        <activity
            android:name=".GestionnaireSonActivity"
            android:label="@string/title_activity_gestionnaire_son" >
        </activity>
        <activity
            android:name=".CompositeurActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_compositeur"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ExtractionActivity"
            android:label="@string/title_activity_extraction" >
        </activity>
        <activity
            android:name=".EditeurSonActivity"
            android:label="@string/title_activity_editeur_son" >
        </activity>
    </application>

</manifest>
